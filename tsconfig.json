{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": false
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
